
<h1> Transactions for <%= user.username %> </h1>

  <div class="row">
    <div class="col">
      <p> Here is the list of transactions you made! </p>
    
      <table class="transactionOptionTable">
        <tr>
            <td>
                <a class="transactionButton" href="/transaction/groupByCategory">
                    group by category
                </a>
            </td>
            <td>
                <a class="transactionButton" href="?sortBy=category">
                    sort by category
                </a>
            </td>
            <td>
                <a class="transactionButton" href="?sortBy=amount">
                    sort by amount
                </a>
            </td>
            <td>
                <a class="transactionButton" href="?sortBy=description">
                    sort by description
                </a>
            </td>
            <td>
                <a class="transactionButton" href="?sortBy=date">
                    sort by date
                </a>
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <th>description</th>
            <th>amount</th>
            <th>category</th>
            <th>date</th>
            <th>delete</th>
            <th>edit</th>
        </tr>

        <form method="post" action="transaction">
            new item: <input type="text" name="item">
            <br>
            priority: <select name="priority">
              <option>1 </option>
              <option>2 </option>
              <option>3 </option>
              <option>4 </option>
              <option>5 </option>
            </select>
            <br>
            <input type="submit" value="store">
        </form>
      </div>
      <div class="col">
        <h2> Summary of Site Usage</h2>
        <p>
          <a  class="btn btn-lg btn-primary"
              href="/todo/byUser">Show todo counts for all users</a></p>
      </div> 
    </div>
</div>
